<h2>Products</h2>

<%= link_to "New Product", new_product_path %>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td>
          <%= link_to "Edit", edit_product_path(product) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
